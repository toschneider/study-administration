<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Identifier</th>
      <th>Title</th>
      <th>Description</th>
      <th>Prof</th>
      <th>Credits</th>
      <th>Sws</th>
      <th>Cycle</th>
      <th>Exam type</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.identifier %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.prof %></td>
        <td><%= event.credits %></td>
        <td><%= event.sws %></td>
        <td><%= event.cycle %></td>
        <td><%= event.exam_type %></td>
        <td><%= event.condition %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

