          <td class="col-sm-1"><%= link_to 'Anzeigen', user , class: 'btn btn-default'%></td>
          <td class="col-sm-1"><%= link_to 'Bearbeiten', edit_user_path(user) , class: 'btn btn-default'%></td>
          <td class="col-sm-2"><%= link_to 'LÃ¶schen', user, method: :delete, data: { confirm: 'Sicher?' } , class: 'btn btn-default'%></td>    
